<form method="post" action="/user" class="form-group">
    <label for="username">
        UserName:
        <input type="text" name="username" value="@ViewBag.username" />
    </label><br />
    <label for="email">
        Email:
        <input type="email" name="email" value="@ViewBag.email" />
    </label><br />
    <label for="password">
        Password:
        <input type="password" name="password" />
    </label><br />
    <label for="passwordVerify">
        Verify Password:
        <input type="password" name="verify" />
    </label>  <br /> 
    <input type="submit" value="Create User" />
</form>
@if (ViewBag.error != null)
{
    <p class="alert alert-danger">@ViewBag.error</p>
}